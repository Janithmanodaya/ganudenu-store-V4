# App
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:5174

# Public site/domain (used for cookies, robots, sitemap)
PUBLIC_ORIGIN=http://localhost:5174
PUBLIC_DOMAIN=https://ganudenu.store

# Database
DB_PATH=./data/ganudenu.sqlite

# Admin seed (used for admin login + OTP)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-strong-password

# JWT
JWT_SECRET=replace-with-a-secure-random-string
JWT_EXPIRES_IN=7d

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,https://ganudenu.store

# Email + OTP
# IMPORTANT: Set EMAIL_DEV_MODE=false in production. When true, OTP codes are returned in API responses and logged.
EMAIL_DEV_MODE=false
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com

# Brevo (HTTP email fallback)
BREVO_API_KEY=
BREVO_LOGIN=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5174/api/auth/google/callback
# Allow insecure SSL in dev if no CA bundle is present
OAUTH_INSECURE_SSL=true

# Gemini (AI features)
GEMINI_API_KEY=

# Facebook Poster service (optional)
FB_SERVICE_URL=
FB_SERVICE_API_KEY=

# Rate limits (per route group)
RATE_GLOBAL_MAX=120
RATE_GLOBAL_WINDOW_MS=60000
RATE_AUTH_MAX=60
RATE_AUTH_WINDOW_MS=60000
RATE_ADMIN_MAX=90
RATE_ADMIN_WINDOW_MS=60000
RATE_LISTINGS_MAX=60
RATE_LISTINGS_WINDOW_MS=60000

# Proxy trust (X-Forwarded-For hops)
TRUST_PROXY_HOPS=1

# TLS CA bundle (optional)
SSL_CAINFO=
CURL_CA_BUNDLE=